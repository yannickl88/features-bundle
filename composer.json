{
    "name":              "yannickl88/features-bundle",
    "description":       "Symfony bundle for managing feature tags",
    "license":           "MIT",
    "type":              "symfony-bundle",
    "keywords": [
        "Symfony",
        "Features",
        "Bundle"
    ],
    "authors": [
        {
            "name":     "Yannick de Lange",
            "email":    "yannickl88@gmail.com",
            "homepage": "http://yannickl88.nl/"
        }
    ],
    "require": {
        "php":                          "^7.2",
        "symfony/config":               "^4.0",
        "symfony/dependency-injection": "^4.0",
        "symfony/finder":               "^4.0",
        "symfony/framework-bundle":     "^4.0",
        "symfony/http-kernel":          "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit":     "^8.4.3",
        "symfony/twig-bundle": "^4.0",
        "symfony/yaml":        "^4.0",
        "twig/twig":           "^2.12.1"
    },
    "suggest": {
        "twig/twig": "Allows use of features in twig templates through the FeaturesExtension"
    },
    "minimum-stability": "dev",
    "prefer-stable":     true,
    "autoload": {
        "psr-4": {
            "Yannickl88\\FeaturesBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yannickl88\\FeaturesBundle\\": "test/"
        }
    },
    "archive": {
        "exclude": [
            "/test"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
